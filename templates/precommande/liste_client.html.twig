{% extends 'backoffice_layout.html.twig' %}

{% block title %}{{parent()}} Liste des albums de precommande {% endblock %}

{% block body %}
    <div class="page-content-wrapper ">

        <div class="container-fluid">

            <div class="row">
                <div class="col-6">
                    <div class="page-title-box">
                        <h4 class="page-title">Gestion des Albums "{{ album.titre }}"</h4>
                    </div>
                </div>
                <div class="col-6 mt-3">
                    <div class="text-right">
                        <a href="{{ path('backend_precommande') }}" class="btn btn-primary">
                            <i class="fa fa-reply"></i> retour
                        </a>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <table id="datatable-buttons" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                <thead>
                                <tr>
                                    <th class="text-center">Id</th>
                                    <th class="text-center">Reference</th>
                                    <th class="text-center">Client</th>
                                    <th class="text-center">Tel</th>
                                    <th class="text-center">Commune</th>
                                    <th class="text-center">Adresse</th>
                                    <th class="text-center">Quantit√©</th>
                                    <th class="text-center">Montant</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for commande in commandes %}
                                    <tr>
                                        <td>{{ loop.index }}</td>
                                        <td>{{ commande.reference }}</td>
                                        <td>{{ commande.nom }}</td>
                                        <td class="text-center">{{ commande.tel }}</td>
                                        <td class="">{{ commande.commune }}</td>
                                        <td class="">{{ commande.adresse }}</td>
                                        <td class="text-center">{{ commande.quantite }}</td>
                                        <td class="text-center">{{ commande.montant }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>


                </div>
            </div>

        </div>

    </div>
{% endblock %}
{% block stylesheets %}

    <link href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />
    <link href="https://cdn.datatables.net/buttons/1.6.2/css/buttons.dataTables.min.css" rel="stylesheet" type="text/css" />

    {{ parent() }}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.6.2/js/dataTables.buttons.min.js"></script>
    <script src="{{ absolute_url(asset('backoffice/plugins/datatables/dataTables.buttons.min.js')) }}"></script>
    <script src="{{ absolute_url(asset('backoffice/plugins/datatables/buttons.bootstrap4.min.js')) }}"></script>
    <script src="{{ absolute_url(asset('backoffice/plugins/datatables/jszip.min.js')) }}"></script>
    <script src="{{ absolute_url(asset('backoffice/plugins/datatables/pdfmake.min.js')) }}"></script>
    <script src="{{ absolute_url(asset('backoffice/plugins/datatables/vfs_fonts.js')) }}"></script>
    <script src="{{ absolute_url(asset('backoffice/plugins/datatables/buttons.html5.min.js')) }}"></script>
    <script src="{{ absolute_url(asset('backoffice/plugins/datatables/buttons.print.min.js')) }}"></script>
    <script src="{{ absolute_url(asset('backoffice/plugins/datatables/buttons.colVis.min.js')) }}"></script>
    <script src="{{ absolute_url(asset('backoffice/plugins/datatables/dataTables.responsive.min.js')) }}"></script>
    <script src="{{ absolute_url(asset('backoffice/plugins/datatables/responsive.bootstrap4.min.js')) }}"></script>

    <script src="{{ absolute_url(asset('backoffice/pages/datatables.init.js')) }}"></script>
{% endblock %}
